<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:paddingTop="10dp"
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relat"
        android:paddingLeft="20sp"
        android:text="@string/recommend_item2"
        android:textColor="@drawable/tab_menu_text"
        android:textSize="20sp" />

    <recommend_listview.MyListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recycler_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/item2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        tools:listitem="@layout/recommend_item2"
        android:layout_alignParentLeft="true" />
</RelativeLayout>